<h1>
	EDIT FORM
</h1>

<% include ../partials/header %>



	<div class = 'row'>
		<h1 style = 'text-align: center'>
	Edit <%=campground.title %>
     </h1>
		<div style = 'margin: 30px auto; width: 30%'>
		<form action = '/campground/<%=campground._id %>?_method=PUT', method = 'POST' enctype="multipart/form-data">
			<div class = 'form-group'>
				<label for = 'title'>Name</label>
				 <input type = 'text', value = '<%=campground.title %>', name = 'title', class='form-control'>
			</div>
			<div class = 'form-group'>
				 <label for ='price'>Price</label>
				 <input type = 'number', value = '<%=campground.price %>', name = 'price', class='form-control' min = '0.01' step = '0.01'>
			</div>
			<div class = 'form-group'>
				 <label for="image">Image</label>
				  <input type="file" id="image" name="image" accept="image/*" >
			</div>
			<div class = 'form-group'>
				 <label for = 'description'>Description</label>
				 <input type = 'text', value = '<%=campground.description %>', name = 'description', class = 'form-control'>
			</div>
			<div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
           </div>
			
			
			
			
			
			<!-- the reason why I use value rather than placeholder is that value will get the value from the page -->
	        <div class = 'form-group'>
				  <button class='btn btn-lg btn-primary btn-block'>Submit</button>
			</div>
	     
       </form>
			<a href = '/campground'> Back to the campground</a>
		</div>
	



	</div>
	





<% include ../partials/foot %>